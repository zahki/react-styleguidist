{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "pretty": true,
    "strict": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es7",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
    "./node_modules/@types/"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
